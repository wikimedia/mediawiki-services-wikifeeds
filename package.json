{
	"name": "@wikimedia/wikifeeds",
	"version": "1.0.0",
	"description": "A node webservice supporting featured wiki content feeds",
	"main": "./app.js",
	"engines": {
		"node": ">=16.0.0"
	},
	"scripts": {
		"start": "service-runner",
		"test": "npm run lint && PREQ_CONNECT_TIMEOUT=15 mocha --recursive",
		"test:unit": "mocha test/lib",
		"test:diff": "mocha --exit test/diff",
		"test:spec": "mocha test/features/app/spec.js",
		"lint": "eslint --ext .js --ext .json .",
		"lint:fix": "eslint --fix .",
		"docker-start": "service-runner docker-start",
		"docker-test": "service-runner docker-test",
		"test-build": "service-runner docker-test && service-runner build --deploy-repo --force",
		"coverage": "nyc mocha --recursive"
	},
	"repository": {
		"type": "git",
		"url": "https://gerrit.wikimedia.org/r/plugins/gitiles/mediawiki/services/wikifeeds"
	},
	"keywords": [
		"REST",
		"API",
		"node service",
		"mobile apps",
		"MediaWiki",
		"Wikipedia"
	],
	"author": "Wikimedia Product Infrastructure team <https://www.mediawiki.org/wiki/Wikimedia_Product/Wikimedia_Product_Infrastructure_team>",
	"contributors": [],
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://phabricator.wikimedia.org/tag/wikifeeds"
	},
	"homepage": "https://phabricator.wikimedia.org/tag/wikifeeds",
	"dependencies": {
		"axios": "^1.6.7",
		"axios-retry": "^4.0.0",
		"bluebird": "^3.7.2",
		"body-parser": "^1.20.2",
		"bunyan": "^1.8.15",
		"cassandra-uuid": "^0.1.0",
		"compression": "^1.7.4",
		"domino": "^2.1.6",
		"express": "^4.18.2",
		"http-shutdown": "^1.2.2",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"mediawiki-title": "^0.7.5",
		"preq": "^0.5.14",
		"service-runner": "^3.1.0",
		"striptags": "^3.2.0",
		"swagger-router": "^0.7.4",
		"swagger-ui-dist": "^5.11.3",
		"uuid": "^9.0.1"
	},
	"devDependencies": {
		"ajv": "^6.12.6",
		"csv-parse": "^5.5.3",
		"eslint-config-wikimedia": "0.25.1",
		"extend": "^3.0.2",
		"mocha": "^10.3.0",
		"mocha-lcov-reporter": "^1.3.0",
		"mocha.parallel": "^0.15.6",
		"nock": "^13.5.1",
		"nyc": "^15.1.0",
		"pre-commit": "^1.2.2",
		"sinon": "^17.0.1"
	}
}
